export PATH="$HOME/.rbenv/bin:$PATH"
eval "$(rbenv init -)"

export DOTFILES="$HOME/.dotfiles"
export PROJECTS="~/Dropbox/code"

#for config_file ($DOTFILES/**/*.sh) 

for config_file in $DOTFILES/**/*.sh
do
   source $config_file
done

# use .localrc for settings specific to one system
if [ -f ~/.localrc ]; then
  source ~/.localrc
fi
